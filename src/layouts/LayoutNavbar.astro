---
interface Props {
  title: string;
  day: number;
}

import Layout from "./Layout.astro";
import NavbarLayout from "./Navbar.astro";

const { title, day } = Astro.props;
---

<Layout title={`Day ${day}: ${title}`}>
  <NavbarLayout day={day} />
  <div class="flex flex-col max-w-screen-lg w-full mx-auto px-4 md:px-6 my-12">
    <slot />
  </div>
</Layout>
