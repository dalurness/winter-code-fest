---
interface Props {
  day: number;
  title: string;
}

const { day, title } = Astro.props;
---

<h1 class="text-5xl font-bold mb-6 border-b border-yeti-dark">
  Day {day}: {title}
</h1>
<!-- Add some spacing to all elements generated by markdown -->
<div class="*:mb-4 [&_h2]:text-3xl">
  <slot />
</div>
